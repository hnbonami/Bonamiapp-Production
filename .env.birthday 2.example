# Add these SMTP settings to your .env file for one.com email

# Email Configuration for one.com (Bonami Sportcoaching)
MAIL_MAILER=smtp
MAIL_HOST=send.one.com
MAIL_PORT=465
MAIL_USERNAME=info@bonami-sportcoaching.be
MAIL_PASSWORD=your_email_password_here
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=info@bonami-sportcoaching.be
MAIL_FROM_NAME="Bonami Sportcoaching"

# CRITICAL: Make sure MAIL_USERNAME and MAIL_FROM_ADDRESS are IDENTICAL
# one.com only allows sending from the authenticated user account

# Birthday Email Feature
BIRTHDAY_EMAILS_ENABLED=true

# Test the configuration with:
# https://bonamiapp.test/debug/mail-config
# https://bonamiapp.test/debug/birthday-test
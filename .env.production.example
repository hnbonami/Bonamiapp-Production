# PRODUCTIE INSTELLINGEN - Bonami Sportcoaching
# Kopieer deze instellingen naar je .env bestand op de productie server

APP_NAME="Bonami Sportcoaching"
APP_ENV=production
APP_KEY=base64:GENEREER_NIEUWE_KEY_MET_php_artisan_key:generate
APP_DEBUG=false  # KRITIEK: Moet false zijn in productie!
APP_TIMEZONE=Europe/Brussels
APP_URL=https://jouwdomein.be

# Database (gebruik sterke wachtwoorden!)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bonamisportcoaching
DB_USERNAME=bonami_user
DB_PASSWORD=STERK_WACHTWOORD_HIER

# Session Beveiliging
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true  # Verplicht HTTPS
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=jouw@email.com
MAIL_PASSWORD=app_specific_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@bonamisportcoaching.be
MAIL_FROM_NAME="${APP_NAME}"

# Queue (gebruik database of redis in productie)
QUEUE_CONNECTION=database

# Cache (gebruik redis in productie voor betere performance)
CACHE_STORE=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning  # Niet 'debug' in productie!
LOG_DEPRECATIONS_CHANNEL=null

# Security Headers
SANCTUM_STATEFUL_DOMAINS=jouwdomein.be
SESSION_DOMAIN=.jouwdomein.be